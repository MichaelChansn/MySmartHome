<?xml version="1.0" encoding="utf-8"?>
<selector
    xmlns:android="http://schemas.android.com/apk/res/android" >
    <item android:state_pressed="true" >
         <shape>
		    
		    <solid android:color="#7ebf3d"/>
		    <corners android:radius="0dp"/>
		    
		    <padding android:left="3dip"
		         android:top="3dip" 
		         android:right="3dip" 
		         android:bottom="3dip"/>
		    <stroke android:color="#7ebf3d"/>
		    
    
		</shape>
    </item>
    
    <item >
        <shape>
		    
		    <solid android:color="#009a9a"/>
		    <corners android:radius="0dp"/>
		    
		    <padding android:left="3dip"
		         android:top="3dip" 
		         android:right="3dip" 
		         android:bottom="3dip"/>
		    <stroke android:color="#009a9a"/>
		    
    
		</shape>
    </item>

</selector>
